<div class="container-fluid">
  <div class="row">
    <h1>Pessoas que frequentam o Jardim</h1>
  </div>
  <div class="row">
    <hr>
    <div class="col-12">
      <p>Há {{people.length}} pessoa(s) registrada(s) no jardim</p>
      {{#if people}}
        <table class="table table-hover table-dark">
          <thead>
            <tr>
              <th>id</th>
              <th>Nome</th>
              <th>Situação</th>
              <th>Ação</th>
            </tr>
          </thead>
          <tbody>
            {{#each people}}
              <tr>
                <td>{{person.id}}</td>
                <td>{{person.name}}</td>
                <td>
                  {{#if person.alive}}
                    Vivo
                  {{else}}
                    Comido por {{zombie.name}}
                  {{/if}}
                </td>
                <td><a href="/people/{{person.id}}?_method=DELETE" class="link-danger">Excluir</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </div>
</div>
